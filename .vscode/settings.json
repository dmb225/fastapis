{
    "files.exclude": {
        "**/*.mypy_cache": true,
        "**/__pycache__": true,
        "**/*.pytest_cache": true,
        "**/*.ruff_cache": true
    },
    "[python]": {
        "editor.formatOnSave": true
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
